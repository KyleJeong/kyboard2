<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="2dp"
    android:verticalGap="7dp"
    android:keyHeight="50dp"
    android:keyWidth="22%">


    <Row  android:keyWidth="22%">
        <Key android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="2" />
        <Key android:keyLabel="3" />
        <Key android:keyLabel="+" android:keyWidth="17%" />
        <Key android:keyLabel="-" android:keyWidth="17%"  android:keyEdgeFlags="right" />
    </Row>
    <Row  android:keyWidth="22%">
        <Key android:keyLabel="4" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="5" />
        <Key android:keyLabel="6" />
        <Key android:keyLabel="␣" android:codes="32" android:keyWidth="34%" android:keyEdgeFlags="right" />
    </Row>
    <Row  android:keyWidth="22%">
        <Key android:keyLabel="7" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="8" />
        <Key android:keyLabel="9" />
        <Key android:keyLabel="⌫"  android:codes="67" android:keyWidth="34%" android:isRepeatable="true" android:keyEdgeFlags="right" />
    </Row>
    <Row  android:keyWidth="22%">
        <Key android:keyLabel="," android:keyEdgeFlags="left"/>
        <Key android:keyLabel="0" />
        <Key android:keyLabel="." />
        <Key android:keyLabel="Enter" android:codes="10" android:keyWidth="34%" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>